module iit.dsl.transspecs.GenerateTransSpecs

import org.eclipse.xtext.xtext.generator.*
import org.eclipse.xtext.xtext.generator.model.project.*

var rootPath = ".."

Workflow {

	component = XtextGenerator {
		configuration = {
			project = StandardProjectConfig {
				baseName = "destransformsdsl"
				rootPath = rootPath
				runtimeTest = {
					enabled = true
				}
				eclipsePlugin = {
					enabled = true
				}
				eclipsePluginTest = {
					enabled = true
				}
				createEclipseMetaData = true
			}
			
			code = {
				encoding = "UTF-8"
				fileHeader = "/*\n * generated by Xtext \${version}\n */"
			}
		}
		language = StandardLanguage {
			name = "iit.dsl.transspecs.TransSpecs"
			fileExtensions = "dtdsl"

            // The following line is required to reference elements of the metamodel
            // of the Coordinate-Transforms-DSL (that is, to import the grammar
            // of the Transforms-DSL in the grammar of this DSL)
			referencedResource = "platform:/resource/transformsdsl/model/generated/CoordTransDsl.genmodel"

			serializer = {
				generateStub = false
			}
			validator = {
				// composedCheck = "org.eclipse.xtext.validation.NamesAreUniqueValidator"
			}
		}
	}
}
